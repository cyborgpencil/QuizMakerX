<UserControl x:Class="QuizBuilderLib.TrueFalseControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizBuilderLib"
             mc:Ignorable="d" 
             d:DesignWidth="512">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="125*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Select the Answer" Grid.Row="0" Grid.ColumnSpan="2" Margin="2"></TextBlock>
        
        <RadioButton x:Name="true" GroupName="correctAnswer" Grid.Row="1" Grid.Column="0" Margin="2" HorizontalAlignment="Center"></RadioButton>
        <RadioButton x:Name="false" GroupName="correctAnswer" Grid.Row="2" Grid.Column="0" Margin="2" HorizontalAlignment="Center"></RadioButton>
        
        <TextBlock Text="True" Grid.Row="1" Grid.Column="1" Margin="2" ></TextBlock>
        <TextBlock Text="Fasle" Grid.Row="2" Grid.Column="1" Margin="2"></TextBlock>
    </Grid>
</UserControl>
