<Window x:Class="QuestionBuilder.QuestionEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuestionBuilder"
        mc:Ignorable="d"
        Title="QuestionEditWindow" Height="512" Width="512" MinHeight="512" MinWidth="512" Background="#FF96CFBA" >
    <Grid Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="240*"/>
            <RowDefinition Height="199*"/>
            <RowDefinition Height="42*"/>
        </Grid.RowDefinitions>


        <Button Content="Save" Margin="5" Grid.Row="2" Width="100" Height="30" HorizontalAlignment="Right" Click="Button_Click" Grid.Column="1"/>

    </Grid>
</Window>
